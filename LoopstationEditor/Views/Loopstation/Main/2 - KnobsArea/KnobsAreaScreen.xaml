<UserControl x:Class="LoopstationEditor.Views.Loopstation.Main.KnobsArea.KnobsAreaScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="240px" Height="134px">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Resources/LoopstationColors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border Height="70px" Background="{StaticResource Loopstation.Light}" CornerRadius="4">
            <Border Height="50px" Margin="28px 0" Background="{StaticResource Loopstation.Screen}" CornerRadius="2"
                    BorderThickness="4" BorderBrush="{StaticResource Loopstation.Darkest}" />
        </Border>
    </Grid>

</UserControl>
