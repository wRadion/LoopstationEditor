<UserControl x:Class="LoopstationEditor.Views.Loopstation.Main.ButtonsArea.ButtonsAreaFxButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:LoopstationEditor.Views.Loopstation.Controls"
             mc:Ignorable="d"
             x:Name="_this"
             Width="auto" Height="64px">
    <UserControl.Resources>
        <Style TargetType="{x:Type controls:ButtonNormal}">
            <Setter Property="FontSize" Value="26px" />
            <Setter Property="LineHeight" Value="28" />
            <Setter Property="Width" Value="40px" />
            <Setter Property="Height" Value="40px" />
            <Setter Property="Margin" Value="13.5px 0" />
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" Width="201px" HorizontalAlignment="{Binding HorizontalAlignment, ElementName=_this}">
        <controls:ButtonNormal Content="A" />
        <controls:ButtonNormal Content="B" />
        <controls:ButtonNormal Content="C" />
    </StackPanel>
</UserControl>
