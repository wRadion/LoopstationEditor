<UserControl x:Class="LoopstationEditor.Views.MainWindow.Controls.TitleBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LoopstationEditor.Views.MainWindow.Controls"
             mc:Ignorable="d" 
             x:Name="_this"
             Background="#050505">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#CCC" />
        </Style>
    </UserControl.Resources>

    <Border Padding="8px 0 0 0">
        <StackPanel Orientation="Horizontal">
            <Image Width="20px" Height="20px"  Source="/Images/icon.png" Margin="0 0 8px 0" />
            <TextBlock Text="{Binding ElementName=_this, Path=Title}" />
        </StackPanel>
    </Border>
</UserControl>
