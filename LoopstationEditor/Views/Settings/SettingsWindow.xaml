<xdw:Window x:Class="LoopstationEditor.Views.Settings.SettingsWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:local="clr-namespace:LoopstationEditor.Views.Settings"
           xmlns:xdw="clr-namespace:XenionDark.Windows;assembly=XenionDark"
           xmlns:xd="clr-namespace:XenionDark.Controls;assembly=XenionDark"
           mc:Ignorable="d"
           Icon="/Views/Resources/Images/icon.png"
           WindowStartupLocation="CenterScreen"
           SizeToContent="WidthAndHeight"
           ResizeMode="CanMinimize"
           BorderBrush="#444"
           BorderThickness="1">
    <StackPanel Orientation="Vertical" Margin="16px">
        <Border x:Name="MainContent" Padding="0 0 0 8px" />
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <xd:Button Content="OK"
                       Margin="0 0 16px 0"
                       Command="{Binding ApplyChangesCommand}"
                       Click="OK_Click" />
            <xd:Button Content="Cancel"
                       Command="{Binding CancelChangesCommand}"
                       Click="Cancel_Click" />
        </StackPanel>
    </StackPanel>
</xdw:Window>
